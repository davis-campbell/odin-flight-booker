<h1>Book your flight</h1>
<%= form_for @booking do |f| %>
  <%= f.hidden_field :flight_id, :value => @flight_id %>
  <%= f.fields_for :passengers do |passengers_form| %>
  <p>
    Name: <%= passengers_form.text_field :name %><br>
    Email: <%= passengers_form.text_field :email %><br>
  </p>
  <% end %>
  <%= f.submit %>
<% end %>
